<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.controllers.CustomerPageController">
   <MenuBar VBox.vgrow="NEVER">
      <Menu fx:id="menu_btn" mnemonicParsing="false" text=",">
         <MenuItem mnemonicParsing="false" text="Bestellhistorie" onAction="#showOrderHistory"/>
         <MenuItem mnemonicParsing="false" text="Bearbeiten" onAction="#openAccountEditModal"/>
         <MenuItem mnemonicParsing="false" text="Logout" onAction="#logout"/>
      </Menu>
   </MenuBar>
   <HBox alignment="CENTER" VBox.vgrow="ALWAYS">
      <VBox fx:id="dishlist1" alignment="TOP_CENTER" prefHeight="775.0" prefWidth="850.0" HBox.hgrow="ALWAYS">
         <Label text="Unser Menü" VBox.vgrow="ALWAYS">
            <font>
               <Font size="43.0" />
            </font>
         </Label>
         <ScrollPane fx:id="s_pane" fitToWidth="true" prefHeight="775.0" prefWidth="850.0" VBox.vgrow="ALWAYS">
            <VBox fx:id="dishlist" alignment="TOP_CENTER" />
         </ScrollPane>
      </VBox>
      <VBox alignment="TOP_CENTER" prefHeight="700.0" prefWidth="350.0" HBox.hgrow="ALWAYS">
         <Label text="Warenkorb" VBox.vgrow="ALWAYS">
            <font>
               <Font size="43.0" />
            </font>
         </Label>
         <ScrollPane fitToWidth="true" prefWidth="350.0" VBox.vgrow="ALWAYS">
            <VBox fx:id="cart" alignment="TOP_CENTER" />
         </ScrollPane>
         <Label fx:id="error_msg" text="Ihr Warenkorb ist leer" textFill="RED" visible="false">
            <VBox.margin>
               <Insets bottom="10.0" top="15.0" />
            </VBox.margin>
         </Label>
         <HBox alignment="CENTER_RIGHT" VBox.vgrow="NEVER">
            <Label fx:id="lTotal" text="Total: 0,00€" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets bottom="10.0" right="10.0" />
               </HBox.margin></Label>
            <Button mnemonicParsing="false" onAction="#openOrderModal" prefHeight="25.0" prefWidth="72.0" text="Bestellen" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets bottom="10.0" right="10.0" />
               </HBox.margin>
            </Button>
         </HBox>
      </VBox>
   </HBox>
</VBox>
