<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="550.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.functional_logic.controllers.DishCreationModalController">
   <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="61.0" text="Gericht erstellen">
      <font>
         <Font size="30.0" />
      </font>
   </Label>
   <HBox alignment="CENTER" VBox.vgrow="ALWAYS">
      <VBox HBox.hgrow="ALWAYS">
         <HBox.margin>
            <Insets right="10.0" top="20.0" />
         </HBox.margin>
         <HBox alignment="CENTER" VBox.vgrow="ALWAYS">
            <Label prefWidth="50.0" text="Name:">
               <HBox.margin>
                  <Insets right="5.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="name_input" HBox.hgrow="ALWAYS">

            </TextField>
         </HBox>
         <HBox alignment="CENTER" VBox.vgrow="ALWAYS">
            <Label prefWidth="50.0" text="Preis:">
               <HBox.margin>
                  <Insets right="5.0" />
               </HBox.margin>
            </Label>
            <Spinner fx:id="price_input" editable="true" HBox.hgrow="ALWAYS" />
            <Label text="€">
               <HBox.margin>
                  <Insets left="5.0" />
               </HBox.margin>
            </Label>
         </HBox>
      </VBox>
      <VBox HBox.hgrow="ALWAYS">
         <HBox.margin>
            <Insets left="10.0" top="10.0" />
         </HBox.margin>
         <Label text="Kategorien:" VBox.vgrow="ALWAYS" />
         <ScrollPane fitToHeight="true" fitToWidth="true" VBox.vgrow="ALWAYS">
            <VBox.margin>
               <Insets top="10.0" />
            </VBox.margin>
            <VBox fx:id="categories_list">
            </VBox>
         </ScrollPane>
         <HBox>
            <VBox.margin>
               <Insets top="10.0"/>
            </VBox.margin>
            <TextField fx:id="category_input"/>
            <Button alignment="CENTER" onAction="#createCategory" prefWidth="120.0" text="Kategorie erstellen">
               <HBox.margin>
                  <Insets left="5.0"/>
               </HBox.margin>
            </Button>
         </HBox>
         <HBox alignment="CENTER_RIGHT">
            <VBox.margin>
               <Insets top="5.0"/>
            </VBox.margin>
            <Button alignment="CENTER" onAction="#deleteCategories" prefWidth="120.0" text="Kategorien löschen">
               <HBox.margin>
                  <Insets left="5.0"/>
               </HBox.margin>
            </Button>
         </HBox>
      </VBox>
      <VBox.margin>
         <Insets left="40.0" right="40.0" />
      </VBox.margin>
   </HBox>
   <Label fx:id="error_msg" text="Bitte alle Felder ausfüllen!" textFill="RED">
      <VBox.margin>
         <Insets bottom="10.0" top="10.0" />
      </VBox.margin>
   </Label>
   <HBox alignment="CENTER">
      <VBox.margin>
         <Insets bottom="20.0" />
      </VBox.margin>
      <Button onAction="#save" text="Speichern">
         <HBox.margin>
            <Insets right="10.0" />
         </HBox.margin>
      </Button>
      <Button onAction="#cancel" text="Abbruch">
         <HBox.margin>
            <Insets left="10.0" />
         </HBox.margin>
      </Button>
   </HBox>
</VBox>
